{
    "version": 2,
    "builds": [
        { "src": "public/**", "use": "@vercel/static" },
        { "src": "server.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/static/(.*)", "dest": "/public/$1" }, // Nếu bạn muốn có /static/ prefix
        { "src": "/(.*\\.(css|js|jpg|png|gif|ico|svg))$", "dest": "/public/$1" }, // Phục vụ file tĩnh trực tiếp
        { "src": "/login.html", "dest": "/public/login.html" },
        { "src": "/index.html", "dest": "/public/index.html" }, // Nếu index.html là trang chính
        { "src": "/", "dest": "/public/index.html" }, // Trang chủ
        { "src": "/(.*)", "dest": "server.js" } // Tất cả các route khác sẽ do server.js xử lý
    ]
}
