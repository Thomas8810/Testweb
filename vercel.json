{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*\\.(css|js|png|jpg|gif|ico|svg|json))$", "dest": "/public/$1" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/index.html", "dest": "/public/index.html" },
    { "src": "/", "dest": "/public/index.html" },

    { "src": "/home", "dest": "server.js" },
    { "src": "/home.html", "dest": "server.js" },
    { "src": "/tasks", "dest": "server.js" },
    { "src": "/tasks.html", "dest": "server.js" },
    { "src": "/voice_search", "dest": "server.js" },
    { "src": "/voice_search.html", "dest": "server.js" },

    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/(.*)", "dest": "server.js" }
  ]
}
